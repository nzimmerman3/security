<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cameras"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="160dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/rename"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/camera1"
            android:background="@android:color/holo_blue_dark"
            android:text="Rename Cameras"
            android:onClick="rename"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/camera1"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/camera3"
            android:background="@android:color/holo_blue_dark"
            android:text="Camera 1"
            android:onClick="camera1"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/camera2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/camera2"
            android:background="@android:color/holo_blue_dark"
            android:text="Camera 2"
            android:onClick="camera2"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/camera3"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_below="@+id/camera4"
            android:onClick="camera3"
            android:text="Camera 3"
            android:textColor="@android:color/black"
            />
        <Button
            android:id="@+id/camera4"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Camera 4"
            android:onClick="camera4"
            android:textColor="@android:color/black"
            />


    </LinearLayout>

</RelativeLayout>